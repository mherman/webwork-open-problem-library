DOCUMENT();

loadMacros(
"PG.pl",
"PGbasicmacros.pl",
"PGchoicemacros.pl",
"PGanswermacros.pl",
"PGauxiliaryFunctions.pl",
"MathObjects.pl",
);

TEXT(&beginproblem);
$showPartialCorrectAnswers = 1;

Context("Numeric");
Context()->variables->add(a => 'Real', b=> 'Real', c=>'Real', A => 'Real', B=> 'Real', C=> 'Real');

$a = Compute("a");
$b = random(-10,10,1);
$c = random(-10,10,1);
$A = Compute("a");
$B = random(-10,10,1);
$C = random(-10,10,1);

$root1 = Compute("sqrt($a x^2 + $b x + $c)")->reduce->TeX;
$root2 = Compute("sqrt($A x^2 + $B x + $C)")->reduce->TeX;
Context()->texStrings;
BEGIN_TEXT

$PAR
Compute, in terms of \(a\), \(\displaystyle \lim_{x \to \infty} ($root1 - $root2)\). You may assume \(a \gt 0\).
$PAR

\(\displaystyle \lim_{x \to \infty} ($root1-$root2) =\) \{ans_rule(10)\}

END_TEXT
Context()->normalStrings;
$ans1 = Compute("($b-$B)/(2sqrt($a))");
ANS($ans1->cmp());

ENDDOCUMENT();
