DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context("Numeric");
Context()->variables->add(a=> 'Real', b=> 'Real', A=> 'Real', B=> 'Real');
$a = random(-15,15,1);
$b = random(-15,15,1);
$A = Compute("A");
$B = Compute("B");

$func = Compute("($a * x + $b) /(ln($A * x + $B)) ")->reduce;

Context()->texStrings;
BEGIN_TEXT
Compute \( \displaystyle \lim_{x \to \infty} $func \), in terms of \(A\) and \(B\). You may assume \(A \gt  0 \).  
$BR
\( \displaystyle \lim_{x \to \infty} $func  = \)\{ans_rule(30)\}
END_TEXT
Context()->normalStrings;
if($a >0){
$ans = Compute("infinity ");
}
else{
$ans = Compute("-infinity");
}
ANS($ans->cmp);



