DOCUMENT();

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"parserFormulaUpToConstant.pl"
);

$showPartialCorrectAnswers = 1;
TEXT(beginproblem());
Context("Numeric");
Context()->variables->add(a=>'Real', b=>'Real', c=>'Real');
$a = Formula("a");
$b = random(-5,5,1);
$c = random(-15,15,1);

$func = Formula("$a*x*e^($b*x+$c) ");
Context()->texStrings;
$integral = "\(\displaystyle \int $func dx \)";
BEGIN_TEXT
Use integration by parts to compute $integral . Your answer should be in terms of \(a\).
$PAR 
$integral = \{ans_rule(30)\}
$PAR
END_TEXT
Context()->normalStrings;
if($b != 0){
$ans = FormulaUpToConstant("$a*($b)^(-2)*e^($b*x + $c)*($b*x-1)");
}
else{
$ans = FormulaUpToConstant("1/2*$a*e^($c)*x^2");
}
ANS($ans->cmp);


ENDDOCUMENT();
