DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
   "PGstandard.pl",     # Standard macros for PG language
   "MathObjects.pl",
   #"source.pl",         # used to display problem source button
   "PGcourse.pl",      # Customization file for the course
);

TEXT(beginproblem());
$showPartialCorrectAnswers = 1;

##############################################################
#
#  Setup
#
#
Context("Numeric");
Context()->variables->add(a=> 'Real', b=> 'Real', A=> 'Real', B=> 'Real', C => 'Real', r=> 'Real', s=> 'Real');

$a = Compute("a");
$b = Compute("b");
$A = Compute("A");
$B = Compute("B");
$C = Compute("C");
$r = random(-5,5,1);
$s = random(-5,5,1); 

$func = Compute("($a * x + $b)^($r)*($A *x^2 + $B*x + $C)^($s) ");
$functex = $func->reduce->TeX;
$dfunc = $func->D(x);

##############################################################
#
#  Text
#
#

Context()->texStrings;
BEGIN_TEXT
Let \(f(x) = $functex \), with \(a,b,A,B,C \gt 0\). Use logarithmic differentiation to compute \(f^{\prime}(x)\) in terms of \(a\), \(b\), \(A\), \(B\), and \(C\).
$PAR
\(f^{\prime} (x) = \) \{ans_rule(30)\}

END_TEXT
Context()->normalStrings;


##############################################################
#
#  Answers
#
#
$ans = $dfunc ; 
ANS($ans->cmp());

