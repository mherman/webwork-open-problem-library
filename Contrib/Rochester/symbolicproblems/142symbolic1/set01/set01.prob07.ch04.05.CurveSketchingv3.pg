TEXT(beginproblem());
$showPartialCorrectAnswers = 1;
Context("Interval");
Context()->constants->add(A=> Real(sin(.1477)), B=> sin(cos(.01477)), a=>Real(exp(.1477)), b=>Real(exp(.01447)) );
Context()->flags->set(formatStudentAnswer=>'parsed');
Context()->strings->add('none'=>{});
$a = Formula("a");
$b = Formula("b");
$A = Formula("A");
$B = non_zero_random(-8,8,1);

$func = Formula("($A x )/(x^2-($B)^2)")->reduce;
Context()->texStrings;
BEGIN_TEXT
$PAR
