DOCUMENT();        # This should be the first executable line in the problem.

loadMacros(
"PGstandard.pl",
"MathObjects.pl",
"IansMacros.pl",
);
TEXT(beginproblem());

$showPartialCorrectAnswers = 1;
Context("Matrix");
$sign = random(-1,1,2);
$text = <<'STOP';
Context()->constants->add(
a=>Real(random(-5,5,1)),
b=>Real(random(1,9,1)*$sign),
c=>Real(random(1,9,1)*$sign),
d=>Real(random(-5,5,1)),
);
STOP
generate_perl_variables_from_constants($text);
$A = Matrix([
[$a,$b],
[$c,$d],
]);
Context()->flags->set(formatStudentAnswer=>'parsed');
Context()->texStrings;
BEGIN_TEXT
Suppose \[ A = $A ,\]
with \(b,c \gt 0\). Compute the eigenvalues of \(A\) \{InTermsOfString()\}.
$BR
Eigenvalues = \{ans_rule(30)\}
$BR
Separate your answers by commas.
END_TEXT
Context()->normalStrings;

$ans1 = Formula("1/2*($a + $d-sqrt(($a-$d)^2 + 4*$b*$c) )");
$ans2 = Formula("1/2*($a +$d+sqrt(($a-$d)^2 + 4*$b*$c) )");

ANS(List($ans1,$ans2)->cmp);

ENDDOCUMENT() ;


